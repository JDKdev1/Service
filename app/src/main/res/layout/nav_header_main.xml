<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cyan">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_logo"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/icon_user"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/cyan"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <serviceapp.magicstudio.com.serviceapp.Utils.CustomTextView
        android:id="@+id/edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_icon"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/user_logo"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/user_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery Man1"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:fontFamily="serif"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/user_email_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+91 9878124585"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:fontFamily="serif"
            android:layout_marginTop="3dp"/>
    </LinearLayout>

</RelativeLayout>